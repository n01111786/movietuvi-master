<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="38.40dp"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".editinfo">

    <RelativeLayout
        android:layout_width="190dp"
        android:id="@+id/landrel1"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="29dp">

        <EditText
            android:id="@+id/profile_name"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/edit_profile_name"
            android:maxLines="1"
            android:padding="10sp"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/profile_country"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/edit_profile_country"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/profile_phone"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:hint="@string/edit_profile_phone"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="10sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/landrel2"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/landrel1">

        <EditText
            android:id="@+id/profile_hobby"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:hint="@string/edit_profile_hobby"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/profile_birth"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:hint="MM/DD/YYYY"
            android:inputType="date"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/profile_gender"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:hint="Gender"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </RelativeLayout>


    <Button
        android:id="@+id/Return"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="72dp"
        android:background="@color/black"
        android:padding="12sp"
        android:text="BACK"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/save_edit_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Return"
        android:layout_marginTop="46dp"
        android:background="@color/black"
        android:padding="12sp"
        android:text="@string/save_edit"
        android:textColor="@color/colorWhite" />


</RelativeLayout>